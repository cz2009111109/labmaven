<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.frasergen.dao.SenderDao">
	
	<sql id="key">
		<trim suffixOverrides=",">
			<if test="user_id!=null">
				user_id,
			</if>
			<if test="name!=null">
				name,
			</if>
			<if test="description!=null">
				description,
			</if>
			<if test="position_id!=null">
				position_id,
			</if>
		</trim>
	</sql>
	
	<sql id="value">
		<trim suffixOverrides=",">
			<if test="user_id!=null">
				#{user_id},
			</if>
			<if test="name!=null">
				#{name},
			</if>
			<if test="description!=null">
				#{description},
			</if>
			<if test="position_id!=null">
				#{position_id},
			</if>
		</trim>
	</sql>
	
	<insert id="addData" parameterType="com.frasergen.entity.Role">
		insert into
		role
		<include refid="key"></include>
		values
		<include refid="value"></include>
	</insert>
	
	<update id="" parameterType="com.frasergen.entity.Role">
		update
		role
		<set>
			<trim suffixOverrides=",">
				<if test="user_id!=null">
					user_id = #{user_id},
				</if>
				<if test="name!=null">
					name = #{name},
				</if>
				<if test="description!=null">
					description = #{description},
				</if>
				<if test="position_id!=null">
					position_id = #{position_id},
				</if>
			</trim>
		</set>
	</update>
	
	<delete id="deleteData" parameterType="int">
		delete from
		role
		where
		role_id=#{role_id} 
	</delete>
	
	<select id="queryAll" resultType="com.frasergen.entity.Role">
		select * 
		from
		role
	</select>
	
	<select id="queryById" parameterType="int" resultType="com.frasergen.entity.Role">
		select *
		from
		role
		where
		role_id=#{role_id}
	</select>
	
	
</mapper>